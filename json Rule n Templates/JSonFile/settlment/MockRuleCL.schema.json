{
  "type": "object",
  "required": [
    "corpId",
    "schemeId",
    "ruleSets"
  ],
  "properties": {
    "corpId": {
      "type": "integer"
    },
    "schemeId": {
      "type": "integer"
    },
    "ruleSets": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "filter",
          "action"
        ],
        "properties": {
          "filter": {
            "type": "object",
            "required": [
              "fromState",
              "toState",
              "ruleExpression"
            ],
            "properties": {
              "fromState": {
                "type": "integer"
              },
              "toState": {
                "type": "integer"
              },
              "ruleExpression": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": [
                    "propertyName",
                    "operation",
                    "value"
                  ],
                  "properties": {
                    "propertyName": {
                      "type": "string"
                    },
                    "operation": {
                      "type": "string",
                      "enum": [
                        "Equal",
                        "NotEqual",
                        "GreaterThan",
                        "GreaterThanOrEqual",
                        "LessThan",
                        "LessThanOrEqual",
                        "IN",
                        "NOTIN"
                      ]
                    },
                    "value": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "action": {
            "type": "object",
            "required": [
              "sendEmail",
              "toEmailHashSet",
              "ccEmailHashSet",
              "bccEmailHashSet",
              "EmailTemplateId",
              "AttachmentHashSet",
              "letterId",
              "sendSMS",
              "contactNoHashSet",
              "SmsTemplateId"
            ],
            "properties": {
              "sendEmail": {
                "type": "boolean"
              },
              "toEmailHashSet": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "ccEmailHashSet": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "bccEmailHashSet": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "EmailTemplateId": {
                "type": "integer"
              },
              "AttachmentHashSet": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "letterId": {
                "type": "integer"
              },
              "sendSMS": {
                "type": "boolean"
              },
              "contactNoHashSet": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "SmsTemplateId": {
                "type": "integer"
              }
            }
          }
        }
      }
    }
  },
  "$schema": "http://json-schema.org/draft-04/schema#"
}